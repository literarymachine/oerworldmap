GET   /                     controllers.LandingPage.get()
GET   /assets/*file         controllers.Assets.at(path="/public", file)
GET   /user/                controllers.UserIndex.get()
POST  /user/                controllers.UserIndex.post()
GET   /user/token           controllers.UserIndex.requestToken()
POST  /user/token           controllers.UserIndex.sendToken()
POST  /user/.logout         controllers.UserIndex.deleteToken()
GET   /.protected           controllers.UserIndex.auth()
GET   /resource/            controllers.ResourceIndex.list()
POST  /resource/            controllers.ResourceIndex.create()
