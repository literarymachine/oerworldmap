ErrorDocument 401 "<h1>Not allowed</h1><a href=/user/register>Sign up</a> or <a href=/user/password>reset password</a>."

<proxy *>
    Redirect "/.login" "/"
</proxy>

<Location />
  AuthType Basic
  AuthName "Restricted Files"
  AuthUserFile /tmp/htpasswd
  AuthGroupFile /tmp/htgroups
  Require all granted
</Location>

<Location /.login>
  Require valid-user
</Location>

<Location /resource/>
  <LimitExcept GET DELETE>
    Require valid-user
    Require group admin
  </LimitExcept>
  <Limit DELETE>
    Require group admin
  </Limit>
</Location>

<Location /resource/*/comment>
  Require valid-user
</Location>

<Location /log/>
  Require group editor
  Require group admin
</Location>

<Location /record/>
  Require group admin
</Location>

<Location /import/>
  Require group admin
</Location>

<Location /index/>
  Require group admin
</Location>

<Location /user/groups>
  Require group admin
</Location>

<Location /sparql/>
  Require group admin
</Location>
