<div class="container">

    <h1>
    	{{i18n.landingpage_title}}
    	<nav class="social">
	    	<a href="https://www.facebook.com/oerworldmap" target="_blank"><i class="fa fa-facebook-official"></i></a>
        <a href="https://twitter.com/oerworldmap" target="_blank"><i class="fa fa-twitter"></i></a>
		</nav>
    </h1>

    <h2>{{{i18n.landingpage_intro}}}</h2>
    <div class="section">
        <div id="worldmap" style="width: 800px; height: 500px"></div>
        <table class="table" about="#users-by-country">
            <script type="application/ld+json">
                {{{scope}}}
            </script>
            {{#scope.entries}}
            <tr><td>{{key}}</td><td>{{value}}</td></tr>
            {{/scope.entries}}
        </table>
    </div>

    <div class="section" id="user-register">
        <div class="register">
            <a href="/user/" class="hijax transclude">{{i18n.register}}</a>
        </div>
    </div>

    <hr />

    <div class="section" id="about">
        <h2>{{i18n.landingpage_about_title}}</h2>
        <p>{{{i18n.landingpage_about_text}}}</p>
        <div class="row">
            <div class="col-md-6">
                {{{i18n.landingpage_about_description_text}}}
            </div>
            <div class="col-md-6">
                {{{i18n.landingpage_about_benefits_text}}}
            </div>
        </div>
    </div>

    <hr />

    <div class="section">
        <h2>
            {{i18n.landingpage_country_champions_title}}
        </h2>
        <p>
            {{{i18n.landingpage_country_champions_intro}}}
        </p>
    </div>

    <hr />

    <div class="section" id="blog">
      <h2>
          {{i18n.landingpage_blog_title}}
      </h2>
      <div class="blank-line-above" id="blog-link">
        <a href="https://oerworldmap.wordpress.com" class="btn btn-lg btn-transparent" target="_blank">
          <i class="fa fa-lg fa-fw fa-wordpress"></i>
          {{i18n.landingpage_blog_visit_link}}
        </a>
      </div>
    </div>

</div>

<footer id="footer">
  <div class="container">
    
    <ul class="inline clearfix">
      <li><h3>Contact / Collaborate</h3></li>
      <li><a href="mailto:info@oerworldmap.org">info@oerworldmap.org</a></li>
      <li><a href="https://www.facebook.com/oerworldmap" target="_blank">Facebook</a></li>
      <li><a href="https://twitter.com/oerworldmap" target="_blank">Twitter</a></li>
      <li><a href="https://github.com/hbz/oerworldmap" target="_blank">GitHub</a></li>
      <li><a href="https://huboard.com/hbz/oerworldmap" target="_blank">HuBoard</a></li>
    </ul>
    
    <ul class="inline clearfix">
      <li><h3>Partners</h3></li>
      <li><a href="https://www.hbz-nrw.de" target="_blank">hbz</a></li>
      <li><a href="http://www.hewlett.org" target="_blank">Hewlett Foundation</a></li>
      <li><a href="http://www.graphthinking.com" target="_blank">graphthinking</a></li>
    </ul>
    
    <hr />
  
    <div role="tabpanel">

      <ul class="nav" role="tablist">
        <li role="presentation">
          <a href="#privacy" data-toggle="pill" role="tab">
            <i class="fa fa-fw fa-chevron-right"></i>
            <i class="fa fa-fw fa-chevron-down"></i>
            Privacy Policy
          </a>
        </li>
        <li role="presentation">
          <a href="#imprint" data-toggle="pill" role="tab">
            <i class="fa fa-fw fa-chevron-right"></i>
            <i class="fa fa-fw fa-chevron-down"></i>
            Imprint
          </a>
        </li>
      </ul>
      
      <div class="tab-content">      
        <div class="tab-pane fade" id="privacy" role="tabpanel">
          <div class="row">
            <div class="col-md-6">
              {{{i18n.landingpage_privacy_website}}}
            </div>
            <div class="col-md-6">
              {{{i18n.landingpage_privacy_html}}}
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="imprint" role="tabpanel">
          <div class="row">
            <div class="col-md-6">
              {{{i18n.landingpage_imprint_text_first_col}}}
            </div>
            <div class="col-md-6">
              {{{i18n.landingpage_imprint_text_second_col}}}
            </div>
          </div>
        </div>
      </div>
      
    </div>
        
  </div>
</footer>


<script type="text/javascript" src="/assets/javascripts/main.js"></script>
